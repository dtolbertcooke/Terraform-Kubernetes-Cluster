# Example environment configuration
# Copy this file to dev.yml, test.yml, or prod.yml and customize

# AWS Configuration
region: "us-west-2"
availability_zones: ["us-west-2a", "us-west-2b", "us-west-2c"]

# EKS Cluster Configuration
cluster_name: "my-eks-cluster"
cluster_version: "1.28"

# Node Group Configuration
node_instance_types: ["t3.medium", "t3.large"]
node_capacity_type: "ON_DEMAND"  # ON_DEMAND or SPOT
node_disk_size: 20
node_desired_size: 2
node_max_size: 10
node_min_size: 1

# VPC Configuration
vpc_cidr: "10.0.0.0/16"
private_subnets: ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets: ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# Application Configuration
app_name: "terraform-k8s-app"
environment: "dev"

# Database Configuration
dynamodb_table_name: "app-state"
dynamodb_billing_mode: "PAY_PER_REQUEST"

# S3 Configuration
s3_bucket_prefix: "terraform-k8s"
s3_versioning_enabled: true

# Lambda Configuration
lambda_runtime: "python3.9"
lambda_timeout: 30
lambda_memory_size: 128

# Monitoring Configuration
enable_cloudwatch_logs: true
log_retention_days: 14
enable_detailed_monitoring: true

# Tags
common_tags:
  Project: "Terraform-Kubernetes-Cluster"
  Environment: "dev"
  ManagedBy: "Terraform"
  Owner: "DevOps Team"